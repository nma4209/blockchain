pragma solidity ^0.8.13;

contract Activity2_23{
    // state
    uint256 public number;
    address public aliceaddress = 0x5B38Da6a701c568545dCfcB03FcB875f56beddC4;
    address public bobeaddress  = 0xAb8483F64d9C6d1EcF9b849Ae677dD3315835cb2;
    bool public aliceTurn = true;

    function store(uint256 _number) public {
        if (msg.sender == aliceaddress && aliceTurn){
        number = _number;
        aliceTurn = false; 
        }
        else if (msg.sender == bobeaddress && !aliceTurn){
            number = _number;
            aliceTurn = true; 
        }

        else {
            revert("You can not excute this function!");
        }
    }
}
